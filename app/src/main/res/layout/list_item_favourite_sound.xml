<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_favourite_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_background_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            android:scaleType="centerCrop"
            tools:src="@drawable/bg_4"
            android:contentDescription="@string/content_description_background_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/iv_play_pause_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/content_description_play_pause_icon"
            android:scaleType="centerInside"
            tools:src="@drawable/vector_play_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/pb_sound_play_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Motivation.CircularProgressIndicator"
            tools:progress="65"
            app:layout_constraintTop_toTopOf="@id/iv_background_image"
            app:layout_constraintBottom_toBottomOf="@id/iv_background_image"
            app:layout_constraintStart_toStartOf="@id/iv_background_image"
            app:layout_constraintEnd_toEndOf="@id/iv_background_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_sound_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_translucent_background"
        style="@style/TextAppearance.Motivation.DefaultFavouriteSoundTitle"
        android:maxLength="8"
        android:layout_marginTop="4dp"
        tools:text="Sound name" />

</LinearLayout>