<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- region Toolbar -->
    <style name="Widget.Motivation.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@android:color/white</item>
        <item name="titleTextAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:paddingStart">@dimen/offset_average</item>
    </style>
    <!-- endregion -->

    <!-- region BottomSheet -->
    <style name="Widget.Motivation.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:minHeight" tools:ignore="PrivateResource">
            @dimen/design_bottom_navigation_height
        </item>
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="itemIconTint">@null</item>
    </style>
    <!-- endregion -->

    <!-- region ProgressBar -->
    <style name="Widget.Motivation.ProgressBar" parent="Widget.AppCompat.ProgressBar">

    </style>
    <!-- endregion -->

    <!-- region Button -->
    <style name="Widget.Motivation.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="backgroundTint">@color/btn_bg_color</item>
    </style>

    <style name="Widget.Motivation.HomeButton" parent="Widget.Motivation.Button">
        <item name="android:layout_width">@dimen/default_home_button_width</item>
        <item name="android:layout_height">@dimen/default_home_button_height</item>
    </style>

    <style name="Widget.Motivation.SaveButton" parent="Widget.Motivation.Button">
        <item name="android:layout_width">@dimen/button_save_wight</item>
        <item name="android:layout_height">@dimen/button_save_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/pickled_bluewood</item>
        <item name="backgroundTint">@color/pickled_bluewood</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:text">@string/save</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <!-- endregion -->

    <!-- region BottomSheet -->
    <style name="Widget.Motivation.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Motivation.BottomSheet
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.Motivation.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/bottom_navigation_corner_size</item>
        <item name="cornerSizeTopLeft">@dimen/bottom_navigation_corner_size</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <!-- endregion -->

    <!-- region CardView -->
    <style name="Widget.Motivation.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Motivation.CardView.Surface2">
        <item name="cardBackgroundColor">?attr/colorSurface2</item>
    </style>

    <style name="Widget.Motivation.CircleCardView" parent="Widget.Motivation.CardView">
        <item name="cardCornerRadius">@dimen/circle_card_view_corner_radius</item>
        <item name="android:layout_width">@dimen/circle_card_view_width</item>
        <item name="android:layout_height">@dimen/circle_card_view_height</item>
        <item name="cardBackgroundColor">?attr/colorOnPrimary</item>
        <item name="cardElevation">0dp</item>
    </style>
    <!-- endregion -->

    <!-- region CheckBox -->
    <style name="Widget.Motivation.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>
    <!-- endregion -->

    <!--  region Chip  -->

    <!-- endregion -->

    <!--  region TextInputEditText  -->
    <!-- endregion -->

    <!--  region TextInputLayout  -->

    <!-- endregion -->

    <!--  region TextView  -->
    <style name="Widget.Motivation.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <!-- endregion -->

    <!--  region Divider  -->
    <style name="Widget.Motivation.Divider" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="dividerColor">?android:textColorPrimary</item>
    </style>
    <!-- endregion -->

    <!--  region Divider  -->
    <style name="Widget.Motivation.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="track">@drawable/switch_track</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="switchMinWidth">54dp</item>
    </style>
    <!-- endregion -->

    <!--  region ShapeAppearance  -->

    <!-- endregion -->

</resources>
